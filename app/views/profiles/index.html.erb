<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <%= link_to 'Create New Profile', new_profile_path, :class => 'btn btn-primary' %>
      <h1>Profiles</h1>


      <table class="table table-striped">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Company name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.first_name %></td>
            <td><%= profile.last_name %></td>
            <td><%= profile.company_name %></td>
            <td><%= link_to 'View', profile, class: 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-warning btn-sm' %></td>
            <td><%= link_to 'Delete', profile, method: :delete, class: 'btn btn-danger btn-sm',
                             data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
