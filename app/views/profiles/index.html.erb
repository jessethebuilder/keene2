<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company name</th>
      <th>Domestic flight</th>
      <th>Time travel</th>
      <th>Beatles or stones</th>
      <th>Big picture</th>
      <th>Color</th>
      <th>Born in us</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.company_name %></td>
        <td><%= profile.domestic_flight %></td>
        <td><%= profile.time_travel %></td>
        <td><%= profile.beatles_or_stones %></td>
        <td><%= profile.big_picture %></td>
        <td><%= profile.color %></td>
        <td><%= profile.born_in_us %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
